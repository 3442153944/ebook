{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",  // 基础路径
    "paths": {  // 路径映射
      "@assets/*": ["src/assets/*"],
      "@/*": ["src/*"]  // 如果配置了 @ 别名，可一并添加
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"]
}
